{
  "name": "@player1os/application-utility",
  "version": "1.0.0",
  "description": "A library that contains multiple utilities for creating node applications",
  "private": false,
  "main": "index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "~8.7.0",
    "npm": "~5.5.1"
  },
  "bin": {
    "application-utility-deploy": "./script/deploy.sh",
    "application-utility-execute": "./script/execute.sh"
  },
  "scripts": {
    "preversion": "git checkout . && git checkout master && git pull && npm run validate",
    "postversion": "git push && git push --tags && npm publish",
    "build": "webpack",
    "build:watch": "chockidar webpack.config.ts -c \"npm run build -- --watch\" --initial --silent",
    "clean": "rm -rf index.js* && rm -rf types",
    "lint": "tslint {./,src/**/,test/**/}*.ts --project ./tsconfig.json",
    "lint:watch": "chokidar ./*.ts src/**/*.ts test/**/*.ts -c \"npm run lint\" --initial --silent",
    "test": "mocha --compilers ts:ts-node/register -r ./register **/*.test.ts",
    "test:coverage": "nyc npm test",
    "test:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm test\" --initial --silent",
    "validate": "npm run clean && npm run build && npm run lint && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/node-js-application-utility.git"
  },
  "keywords": [
    "async",
    "dotenv",
    "env",
    "environment",
    "execute",
    "graceful shutdown",
    "node",
    "typescript"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Player1os/node-js-application-utility/issues"
  },
  "homepage": "https://github.com/Player1os/node-js-application-utility#readme",
  "dependencies": {
    "dotenv": "^4.0.0",
    "find-config": "^1.0.0",
    "fs-extra": "^4.0.2",
    "module-alias": "^2.0.2"
  },
  "devDependencies": {
    "@player1os/tsconfig": "^1.0.1",
    "@player1os/tslint-config": "^1.3.4",
    "@player1os/webpack-config": "^1.0.1",
    "@types/bluebird-global": "^3.5.3",
    "@types/chai": "^4.0.4",
    "@types/dotenv": "^4.0.2",
    "@types/fs-extra": "^4.0.3",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.47",
    "@types/webpack": "^3.0.14",
    "awesome-typescript-loader": "^3.3.0",
    "bluebird": "^3.5.1",
    "chai": "^4.1.2",
    "chokidar": "^1.7.0",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "spawn-process-promise": "^1.0.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tsutils": "^2.12.1",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  }
}
